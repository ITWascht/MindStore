<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.kassel.ui.SettingsDialogController"
            prefWidth="420">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding><Insets topRightBottomLeft="14"/></padding>
            <columnConstraints>
                <ColumnConstraints minWidth="160" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Reminder-Refresh (Sek.):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="refreshSecondsField" promptText="z. B. 30"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Standard Snooze (Min.):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="snoozeMinutesField" promptText="z. B. 10"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Startansicht:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="startupViewBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="errorLabel" textFill="red"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
