<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.kassel.ui.NewIdeaDialogController"
            prefWidth="520">
    <content>
        <GridPane hgap="10" vgap="5">
            <padding>
                <!-- lieber explizit statt topRightBottomLeft -->
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Row 0: Titel -->
            <Label text="Titel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" promptText="Kurzer, prägnanter Titel"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Row 1: Beschreibung -->
            <Label text="Beschreibung" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="bodyArea" promptText="Details, Links, ToDos …"
                      prefRowCount="6"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"
                      GridPane.vgrow="ALWAYS"/>

            <!-- Row 2: Priorität -->
            <Label text="Priorität" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="priorityBox"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Row 3: Status -->
            <Label text="Status" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusBox"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Row 4: Aufwand -->
            <Label text="Aufwand (min)" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="effortField" promptText="optional"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Row 5: Tags -->
            <Label text="Tags" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ListView fx:id="tagsList" prefHeight="180.0"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"
                      GridPane.vgrow="ALWAYS"/>

            <!-- Row 6: Tag hinzufügen -->
            <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <TextField fx:id="newTagField" promptText="Neuen Tag eingeben…"/>
                <Button text="Hinzufügen" onAction="#onAddTag"/>
            </HBox>

            <!-- Anhänge -->
            <Label text="Anhänge" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <VBox spacing="6" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <ListView fx:id="attachmentsList" prefHeight="120"/>
                <HBox spacing="8">
                    <Button text="Hinzufügen…" onAction="#onAddAttachment"/>
                    <Button text="Entfernen"    onAction="#onRemoveAttachment"/>
                    <Button text="Öffnen"       onAction="#onOpenAttachment"/>
                </HBox>
            </VBox>

            <!-- Row 7-8: Erinnerung -->
            <Label text="Erinnerung" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="9" GridPane.columnIndex="1">
                <DatePicker fx:id="reminderDate"/>
                <TextField fx:id="reminderTime" promptText="HH:mm" prefWidth="70"/>
            </HBox>

            <Label text="(optional • z. B. heute 16:00)"
                   style="-fx-opacity:0.6; -fx-font-size:11;"
                   GridPane.rowIndex="8" GridPane.columnIndex="1"/>


            <!-- Row 9: Fehlermeldung -->
            <Label fx:id="errorLabel" textFill="red"
                   GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
